<%- include('partials/header') %>

<h3>My Devices</h3>
<hr>

<!-- Add new device button -->
<form action="/devices/add" method="POST" class="mb-4">
    <button type="submit" class="btn btn-success">Add New Device</button>
</form>

<!-- QR Code Modal -->
<div class="modal fade" id="qrModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="qrModalLabel">Scan QR Code</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body text-center">
        <p>Scan this with your WhatsApp Linked Devices option.</p>
        <div id="qrcode-container"></div>
        <div id="qr-status" class="mt-3"></div>
      </div>
    </div>
  </div>
</div>

<!-- List of devices -->
<div class="row">
    <% devices.forEach(device => { %>
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    Session ID: <%= device.sessionId.substring(0, 8) %>...
                    <span class="badge 
                        <% if(device.status === 'connected') { %>bg-success<% } %>
                        <% else if(device.status === 'pending') { %>bg-warning text-dark<% } %>
                        <% else { %>bg-danger<% } %>">
                        <%= device.status %>
                    </span>
                </div>
                <div class="card-body">
                    <% if(device.status === 'pending') { %>
                        <button class="btn btn-primary scan-qr-btn" data-sessionid="<%= device.sessionId %>" data-bs-toggle="modal" data-bs-target="#qrModal">
                            Scan QR Code
                        </button>
                    <% } %>
                    
                    <form action="/devices/update-reply/<%= device._id %>" method="POST" class="mt-3">
                        <div class="mb-3">
                            <label class="form-label">Auto-Reply Message:</label>
                            <textarea name="message" class="form-control"><%= device.autoReplyMessage %></textarea>
                        </div>
                        <button type="submit" class="btn btn-info btn-sm">Save Reply</button>
                    </form>
                </div>
                <div class="card-footer">
                     <form action="/devices/delete/<%= device._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this device?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete Device</button>
                    </form>
                </div>
            </div>
        </div>
    <% }) %>
</div>

<!-- Client-side scripts -->
<script src="/socket.io/socket.io.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/dashboard.js"></script>

</body>
</html>
